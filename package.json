{
	"name": "opc-gateway",
	"version": "1.0.0",
	"description": "Gateway for communication with OPC UA servers",
	"main": "src/server.js",
	"scripts": {
		"start": "node src/server.js",
		"dev": "nodemon src/server.js",
		"docker:build": "docker build -t opc-gateway .",
		"docker:run": "docker run -p 3000:3000 --env-file .env opc-gateway",
		"docker:compose": "docker-compose up -d"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"morgan": "^1.10.0",
		"node-opcua": "^2.85.0",
		"serve-index": "^1.9.1",
		"winston": "^3.8.2"
	},
	"devDependencies": {
		"nodemon": "^2.0.22"
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tinroad/opc-gateway.git"
	},
	"keywords": [
		"opc-ua",
		"gateway",
		"iot",
		"industrial",
		"automation",
		"protocol"
	],
	"author": "Diego Morales",
	"license": "MIT"
}
